    <inlineHelpText>Current stage in the adjudication workflow. Keying = data entry, Bill Review = adjudication review, Quote View = read-only view, Adjudicated = final locked state.</inlineHelpText>
    <label>Current Adjudication Stage</label>
    <required>false</required>
    <trackHistory>true</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Picklist</type>
    <valueSet>
        <restricted>true</restricted>
        <valueSetDefinition>
            <sorted>false</sorted>
            <value>
                <fullName>Keying</fullName>
                <default>true</default>
                <label>Keying</label>
            </value>
            <value>
                <fullName>Bill Review</fullName>
                <default>false</default>
                <label>Bill Review</label>
            </value>
            <value>
                <fullName>Quote View</fullName>
                <default>false</default>
                <label>Quote View</label>
            </value>
            <value>
                <fullName>Adjudicated</fullName>
                <default>false</default>
                <label>Adjudicated</label>
            </value>
        </valueSetDefinition>
    </valueSet>
</CustomField>

